/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    model = "custom-nrf52840-keyboard";
    compatible = "zan,custom-kbd";

    chosen {
        zephyr,code-partition = &code_partition;
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,console = &cdc_acm_uart;
        zmk,kscan = &kscan0;
        zmk,physical-layout = &layout_0;
    };

    /* 键盘矩阵扫描节点 */
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";

        /* 外圈作为行输入，带上拉 */
        row-gpios = 
            <&gpio0 17 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 22 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 24 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio1 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
            <&gpio0 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;

        /* 内圈作为列驱动，主动拉低 */
        col-gpios = 
            <&gpio0 31 GPIO_ACTIVE_LOW>,
            <&gpio0 29 GPIO_ACTIVE_LOW>,
            <&gpio0 2  GPIO_ACTIVE_LOW>,
            <&gpio1 15 GPIO_ACTIVE_LOW>,
            <&gpio1 13 GPIO_ACTIVE_LOW>,
            <&gpio1 11 GPIO_ACTIVE_LOW>,
            <&gpio0 10 GPIO_ACTIVE_LOW>,
            <&gpio0 9  GPIO_ACTIVE_LOW>;

    };

    /* 矩阵到物理键位的映射 */
    layout_0: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <6>;
        columns = <8>;
        map = <
                        RC(3,3)     RC(4,5)     RC(4,2)
                            RC(4,7) RC(4,3) RC(4,6)
            RC(5,5)     RC(5,4)     RC(4,4)     RC(5,3)     RC(5,2)
RC(0,7) RC(0,6) RC(0,5) RC(0,4) RC(0,3) RC(0,2) RC(0,1) RC(0,0) RC(5,7) RC(5,6)
RC(1,7) RC(1,6) RC(1,5) RC(1,4) RC(1,3) RC(1,2) RC(1,1) RC(1,7) RC(2,5) RC(3,0)
RC(3,7) RC(2,6) RC(2,5) RC(2,4) RC(2,3) RC(2,2) RC(2,1) RC(4,0) RC(3,2) RC(3,1)
                    RC(3,6) RC(3,5) RC(3,4) RC(5,0) RC(5,7)
        >;
    };
};


&adc {
    status = "okay";
};

&gpiote {
    status = "okay";
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&pwm0 {
    status = "okay";
    pinctrl-0 = <&pwm0_default>;
    pinctrl-1 = <&pwm0_sleep>;
    pinctrl-names = "default", "sleep";
};



&usbd {
    status = "okay";
    cdc_acm_uart: cdc_acm_uart {
        compatible = "zephyr,cdc-acm-uart";
    };
};

&flash0 {
    /*
     * For more information, see:
     * http://docs.zephyrproject.org/latest/devices/dts/flash_partitions.html
     */
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        sd_partition: partition@0 {
            reg = <0x00000000 0x00001000>;
        };

        code_partition: partition@1000 {
            reg = <0x00001000 0x000d3000>;
        };

        /*
         * The flash starting at 0x000d4000 and ending at
         * 0x000f3fff is reserved for use by the application.
         */

        /*
         * Storage partition will be used by FCB/LittleFS/NVS
         * if enabled.
         */
        storage_partition: partition@d4000 {
            reg = <0x000d4000 0x00020000>;
        };

        boot_partition: partition@f4000 {
            reg = <0x000f4000 0x0000c000>;
        };
    };
};
